---
import { languages } from '../i18n/ui';
---

<ul class="component">
  {
    Object.entries(languages).map(([lang]) => (
      <li>
        <a href={`/${lang}/`}>{lang}</a>
      </li>
    ))
  }
</ul>

<style>
  .component {
    list-style-type: none;
    align-items: center;
    gap: 1rem;
    display: flex;
    flex-direction: row;
    justify-content: center;
  }
</style>
