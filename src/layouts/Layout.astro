---
import Particles from '../components/Particles.astro';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon-16x16.png"
    />
    <link
      rel="icon"
      type="image/x-icon"
      href="/favicon.ico"
    />
    <link
      rel="manifest"
      href="/manifest.webmanifest"
    />
    <meta
      name="theme-color"
      content="#1e1e2e"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>thisguyvims</title>
  </head>
  <body>
    <Particles />
    <slot />
  </body>
</html>

<style is:global>
  /* border radius */
  :root {
    --radius-s: 0.2rem;
    --radius-m: 0.3rem;
    --radius-l: 0.5rem;
    --radius-xl: 1rem;
    --radius-xxl: 2rem;
    --radius-full: 50%;
  }

  /* Catppuccin colorscheme */
  :root {
    --color-base: #1e1e2e;
    --color-blue: #89b4fa;
    --color-crust: #11111b;
    --color-flamingo: #f2cdcd;
    --color-green: #a6e3a1;
    --color-lavender: #b4befe;
    --color-mantle: #181825;
    --color-maroon: #eba0ac;
    --color-mauve: #cba6f7;
    --color-overlay-0: #6c7086;
    --color-overlay-1: #7f849c;
    --color-overlay-2: #9399b2;
    --color-peach: #fab387;
    --color-pink: #f5c2e7;
    --color-red: #f38ba8;
    --color-rosewater: #f5e0dc;
    --color-sapphire: #74c7ec;
    --color-sky: #89dceb;
    --color-subtext-0: #a6adc8;
    --color-subtext-1: #bac2de;
    --color-surface-0: #313244;
    --color-surface-1: #45475a;
    --color-surface-2: #585b70;
    --color-teal: #94e2d5;
    --color-text: #cdd6f4;
    --color-yellow: #f9e2af;
  }

  :root {
    font-family: system-ui, Avenir, Helvetica, Arial, sans-serif;
    line-height: 1.5;
    font-weight: 400;

    color-scheme: dark;
    color: var(--color-text);
    background-image: linear-gradient(180deg, var(--color-base), var(--color-crust));

    font-synthesis: none;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  html {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    display: grid;
    grid-template-columns: minmax(0.8rem, 1fr) auto minmax(0.8rem, 1fr);
    margin-top: 1rem;
    margin: 0;
    min-height: 100dvh;
    min-width: 100dvw;
    place-items: center;
  }

  @media (min-height: 830px) {
    body {
      margin-top: 0;
    }
  }
</style>
